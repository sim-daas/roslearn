<?xml version="1.0" ?>
<robot name="myrobot">


<material name="grey">
    <color rgba="0.5 0.5 0.5 1"/>
</material>

<material name="black">
    <color rgba="0 0 0 1"/>
</material>

<material name="dark_green">
    <color rgba="0.1 0.3 0.1 1"/>
</material>

<material name="dark_grey">
    <color rgba="0.2 0.2 0.2 1"/>
</material>

<material name="dark_blue">
    <color rgba="0.1 0.25 0.5 1"/>
</material>

<link name="base_footprint"/>

<!-- Base Link -->

<joint name="chassijoint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.5 0 0" rpy="0 0 0"/>
</joint>

<link name="base_link">
    <inertial>
        <mass value="5.0"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <geometry>
            <box size="1 0.6 0.2"/>
        </geometry>
        <material name="grey"/>
    </visual>
    <collision>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <geometry>
            <box size="1 0.6 0.2"/>
        </geometry>
    </collision>
</link>

<!-- Left Back Wheel -->

<joint name="lbwheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="lbwheel"/>
    <origin xyz="-0.4 0.3 0.1" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="lbwheel">
    <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.2" length="0.2"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.2" length="0.2"/>
        </geometry>
    </collision>
</link>

<!-- Left Front Wheel -->

<joint name="lfwheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="lfwheel"/>
    <origin xyz="0.4 0.3 0.1" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="lfwheel">
    <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.2" length="0.2"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.2" length="0.2"/>
        </geometry>
    </collision>
</link>

<!-- Right Front Wheel -->

<joint name="rfwheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rfwheel"/>
    <origin xyz="0.4 -0.3 0.1" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="rfwheel">
    <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
        <origin xyz="0 0 -0.1" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.2" length="0.2"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <origin xyz="0 0 -0.1" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.2" length="0.2"/>
        </geometry>
    </collision>
</link>

<!-- Right Back Wheel -->

<joint name="rbwheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rbwheel"/>
    <origin xyz="-0.4 -0.3 0.1" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
</joint>

<link name="rbwheel">
    <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
        <origin xyz="0 0 -0.1" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.2" length="0.2"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <origin xyz="0 0 -0.1" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.2" length="0.2"/>
        </geometry>
    </collision>
</link>

<!-- Box -->

<joint name="box_joint" type="fixed">
    <parent link="base_link"/>
    <child link="box"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
</joint>

<link name="box">
    <inertial>
        <mass value="1.0"/>
        <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://rostut/models/shooter/meshes/box.stl" scale="1 1 1"/>
        </geometry>
        <material name="dark_green"/>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.8 0.4 0.5"/>
        </geometry>
    </collision>
</link>

<!-- Lid -->

<joint name="lid_joint" type="revolute">
    <parent link="box"/>
    <child link="lid"/>
    <origin xyz="-0.4 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit effort="10" velocity="1" lower="0" upper="1.57"/>
</joint>

<link name="lid">
    <inertial>
        <mass value="0.2"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
        <origin xyz="0.4 0 0.0175" rpy="0 0 0"/>
        <geometry>
            <box size="0.8 0.4 0.035"/>
        </geometry>
        <material name="dark_blue"/>
    </visual>
    <collision>
        <origin xyz="0.4 0 0.0175" rpy="0 0 0"/>
        <geometry>
            <box size="0.8 0.4 0.035"/>
        </geometry>
    </collision>
</link>

</robot>